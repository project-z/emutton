{erl_opts, [debug_info, warnings_as_errors]}.

{port_env, [{"DRV_CFLAGS",  "$DRV_CFLAGS -O3 -Wall -Wextra -I c_src/mutton/include"},
            {"DRV_LDFLAGS", "$DRV_LDFLAGS c_src/mutton/build/lib/libmutton.a /usr/local/lib/libleveldb.a c_src/mutton/ext/lib/libsnappy.a"},

            %% Make sure to link -lstdc++ on Linux, FreeBSD, or Solaris
            {"(linux|freebsd|solaris)", "LDFLAGS", "$LDFLAGS -lstdc++"}]}.

{port_specs, [{"priv/emtn_drv.so",["c_src/*.c"]}]}.

{pre_hooks, [{compile, "c_src/build_deps.sh"}]}.
{post_hooks, [{clean, "c_src/build_deps.sh clean"}]}.